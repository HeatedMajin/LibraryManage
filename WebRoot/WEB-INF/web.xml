	</servlet>
	<servlet>
		<servlet-name>AddBookServlet</servlet-name>
		<servlet-class>cn.majin.Web.Book.AddBookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ShowBookServlet</servlet-name>
		<servlet-class>cn.majin.Web.Book.ShowBookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DelBookServlet</servlet-name>
		<servlet-class>cn.majin.Web.Book.DelBookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateBookServlet</servlet-name>
