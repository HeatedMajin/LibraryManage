	</servlet>
	<servlet>
		<servlet-name>ShowStatisticsServlet</servlet-name>
		<servlet-class>cn.majin.Web.Book.statistics.ShowStatisticsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchSupportServlet</servlet-name>
		<servlet-class>cn.majin.Web.Book.SearchSupportServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
