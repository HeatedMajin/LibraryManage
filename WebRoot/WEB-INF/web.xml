	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>cn.majin.Web.User.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ManageServlet</servlet-name>
		<servlet-class>cn.majin.Web.manager.ManageServlet</servlet-class>
